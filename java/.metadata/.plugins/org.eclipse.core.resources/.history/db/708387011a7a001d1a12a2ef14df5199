package day23;

import javax.swing.JOptionPane;

public class Ex07 {
	public static void main(String[] args) {
		
		Thread thread = new Thread(new ThreadEx07());
		thread.start();
		
		JOptionPane.showInputDialog("메세지 입력");
		thread.interrupt();		// interrupted : true, InterruptedExeption : true
		
		// isInterrupted()
		System.out.println("isInterrupted : " + thread.isInterrupted());
	}
}

class ThreadEx07 implements Runnable{

	@Override
	public void run() {
		
		while(!Thread.interrupted()) {	// 현재의 interrupted 상태값 반환 (true) : false 초기화
			for(int i = 0; i < 100; i++) {
				System.out.println(i);
				try {
					Thread.sleep(1000);
				} catch (InterruptedException e) {
					System.out.println("발생");
					Thread.currentThread().interrupt(); 	// interrupted : false -> true
				}
			}
		}
		
	}
	
	
}