package day23;

import javax.swing.JOptionPane;

public class Ex07 {
	public static void main(String[] args) {
		
		Thread thread = new Thread(new ThreadEx07());
		thread.start();
		
		JOptionPane.showInputDialog("메세지 입력");
		thread.interrupt();
	}
}

class ThreadEx07 implements Runnable{

	@Override
	public void run() {
		
		while(!Thread.interrupted()) {
			for(int i = 0; i < 100; i++) {
				System.out.println(i);
				for(long j = 0; j < 30000000000000L; j++);
			}
		}
		
	}
	
	
}