package day18.sub1;

import javax.swing.JFrame;

public class Ex01 extends JFrame {
	public Ex01() {
		super("연습01");
		// 창을 보이게 해야 함
		setVisible(true);
		// 창의 크기
		setSize(300,400);
		// 창을 닫았을 때 콘솔 실행도 같이 끔
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}

	public static void main(String[] args) {
		
		Ex01 ex01 = new Ex01();
		
		
		ex01.setVisible(true);
		
		ex01.setSize(300,400);
		
		ex01.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
	}
}
